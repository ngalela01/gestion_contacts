
{% extends 'base.html.twig' %}


{% block title %}Fiche lecontact{% endblock %}

{% block body %}
<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-4 col-xl-3">
        <div class="card mb-3">
            <h4 class="card-title text-center">{{lecontact.nom}} {{lecontact.prenom}}</h4>
            <img style="height: auto; max-width: 200px; display: block;" src="{{lecontact.avatar}}" class="avatar mx-auto my-3" alt="image avatar">
 
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Rue : {{lecontact.rue}}</li>
                <li class="list-group-item">Code postal : {{lecontact.cp}}</li>
                <li class="list-group-item">Ville : {{lecontact.ville}}</li>
                <li class="list-group-item">Email : {{lecontact.mail}}</li>
                <li class="list-group-item">
                    {% if lecontact.sexe==0 %}
                    <span class='badge text-bg-info'>Homme</span>
                    {% else %}
                        <span class='badge text-bg-warning'>Femme</span>
                    {% endif %}
                </li>
            </ul>
    
            <div class="card-body">
                <a href="{{path('contacts')}}">Revenir Ã  la liste</a>
            </div>
        </div>
    </div>

</div>



{% endblock %}